<% if flash[:notice]%>
  <%= flash[:notice] %>
<% end %>

<h2>Editing Book</h2>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <% if @book.errors.any? %>
    	<%= @book.errors.count %>error
 		<ul>
   		<% @book.errors.full_messages.each do |message| %>
    	<li><%= message %></li>
    <% end %>
  	</ul>
  	<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br></br>

  <%= f.submit 'Update Book' %>

  <br></br>

  <%= link_to "show", book_path(@book.id) %>

  |

  <%= link_to 'back', '/books'%>

<% end %>